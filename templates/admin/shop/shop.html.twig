{% extends 'admin/layout.html.twig' %}

{% block title %}Back-office : Boutique{% endblock %}

{% block body %}

    <h1>Boutique</h1>


    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% if produits is not null  %}
        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Catégorie</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for produit in produits %}
            <tr>
                <td>{{ produit.id }}</td>
                <td>{{ produit.name }}</td>
                <td>{{ produit.price }}</td>
                <td>{{ produit.quantity }}</td>
                <td>{{ produit.categorie.name }}</td>
                <td><a href="{{ path('admin_produit_edit', {'id' : produit.id }) }}">Modifier</a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

    {% endif %}

    <h2>Ajouter un produit</h2>

    {{ form_start(formProduit) }}

     {{ form_end(formProduit) }}


    <h2>Liste des catégories</h2>
    <div class="row">
    {% if categories is not null %}
        {% for categorie in categories %}
            <div class="card ms-3" style="width: 18rem;">
                <img src="{{ asset('uploads/images/categorie/' ~ categorie.photo)}}" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">{{ categorie.name }}</h5>
                    <a href="{{ path('admin_categorie_edit', {'id' : categorie.id }) }}">Modifier</a>
                </div>
            </div>
        {% endfor %}
    {% endif %}
    </div>
    <h2>Ajouter une catégorie</h2>
    {{ form_start(formCategorie) }}
    {{ form_end(formCategorie) }}
{% endblock %}
