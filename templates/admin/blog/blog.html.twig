{% block title %}Back-office : Blo{% endblock %}

{% block body %}
    <h1>Blog</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


        <!-- Articles -->
        <h2>Liste des articles</h2>
