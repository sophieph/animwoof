                <th>Id</th>
                <th>Titre</th>
                <th>Crée le</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.titre }}</td>
                    <td>{{ article.createdAt|date('d/m/Y') }}</td>
                    <td><a href="{{ path('admin_animals_edit', {'id' : adopted.id }) }}">Modifier</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>



