<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

</head>
<body>

<div class="wrapper">
    <header>
        <h1>Animwoof</h1>
        <nav>
            <ul>
                <li><a href="{{ path('homepage') }}">Accueil</a></li>
                <li><a href="#">Adoption</a></li>
                <li><a href="#">Boutique</a></li>
                <li><a href="#">Donation</a></li>
                <li><a href="#">Blog</a></li>
                {% if is_granted('ROLE_ADMIN') %}<li><a href="{{ path('admin_dashboard') }}">Back-office</a></li>{% endif %}
            </ul>
        </nav>
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('logout') }}">Logout</a>
            </div>
        {% else %}
            <a href="{{ path('login') }}">Log in</a>
            <a href="{{ path('signup') }}">Sign up</a>
        {% endif %}

    </header>
    <div class="nav-admin">
        <h1>Back-office</h1>

        <ul>
            <li><a href="{{ path('admin_animals') }}">Animaux</a></li>
            <li><a href="{{ path('admin_shop') }}">Boutique</a></li>
            <li><a href="{{ path('admin_donation') }}">Donation</a></li>
            <li><a href="{{ path('admin_blog') }}">Blog</a></li>
        </ul>
    </div>

    <div class="content">
        {% block body %}{% endblock %}
    </div>

    <footer>

    </footer>
</div>

</body>
</html>


{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}