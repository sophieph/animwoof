{% extends 'base.html.twig' %}
{% block title %}S'inscrire {% endblock %}

{% block body %}
    <div class="card border-0 rounded-0 my-3 py-3 px-4 bg-greenlight">
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb p-0 m-0">
                <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Acceuil</a></li>
                <li class="breadcrumb-item active" aria-current="page">S'inscrire</li>
            </ol>
        </nav>
    </div>
    <div class="card border-0 rounder-0 my-3" id="register">
        <div class="card-header bg-greenlight border-0 rounded-0">
            <h1 class="text-center">Inscrivez-vous !</h1>
            <small><a href="{{ path('login') }}" class="text-center d-block mx-auto w-100">
                    Vous avez un compte? Cliquez ici pour vous connectez-vous.</a></small>
        </div>
    </div>
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="card border-0 rounded-0 bg-white">
        <div class="card-body p-0 bg-white">
            {{ form_start(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
